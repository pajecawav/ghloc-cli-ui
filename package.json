{
	"name": "ghloc-cli-ui",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
		"format": "prettier --write --ignore-path '.gitignore' './**/*.{js,jsx,ts,tsx,css,json,md,yml}'",
		"prepare": "is-ci || husky install"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,md,yml,css}": "prettier --write"
	},
	"dependencies": {
		"is-ci": "^3.0.1",
		"preact": "^10.5.15"
	},
	"devDependencies": {
		"@preact/preset-vite": "^2.1.5",
		"@typescript-eslint/eslint-plugin": "^5.26.0",
		"@typescript-eslint/parser": "^5.26.0",
		"autoprefixer": "^10.4.7",
		"eslint": "^8.16.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-react": "^7.30.0",
		"eslint-plugin-react-hooks": "^4.5.0",
		"husky": "^8.0.0",
		"lint-staged": "^12.4.2",
		"postcss": "^8.4.14",
		"prettier": "^2.6.2",
		"tailwindcss": "^3.0.24",
		"typescript": "^4.5.4",
		"vite": "^2.9.9"
	}
}
